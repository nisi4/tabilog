<!DOCTYPE html>
<html>
  <head>
    <title>Tabilog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>
  </head>

  <body>
    <header>
      <div class="container-fluid">
        <div class="row my-2 d-flex justify-content-between">
          <div class="col-4 ml-5">
            <%= link_to root_path,class: "text-dark",style: "text-decoration:none;" do %>
              <%= image_tag "TABI4.png",class: "tabilogo",alt: "Tabiログ",width: "120px" %>
            <% end %>
          </div>
          <div class="col-6 d-flex justify-content-end align-items-center mr-4 mr-sm-5">
            <div>
            <!--ユーザーでログイン中-->
            <% if user_signed_in? %>
              <%= link_to destroy_user_session_path,method: :delete,class: "text-dark",style: "text-decoration:none;", "data-turbolinks": "false" do %>
                <i class="fas fa-sign-out-alt mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to root_path,class: "text-dark",style: "text-decoration:none;", "data-turbolinks": "false" do %>
                <i class="fas fa-home mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to mypage_show_path(current_user.id),class: "text-dark",style: "text-decoration:none;", "data-turbolinks": "false" do %>
                <i class="fas fa-user mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to new_public_post_path,class: "text-dark",style: "text-decoration:none;", "data-turbolinks": "false" do %>
                <i class="fas fa-edit mx-2" style="font-size:2rem;"></i>
              <% end %>
            <!--管理者でログイン中-->
            <% elsif admin_signed_in? %>
              <%= link_to destroy_admin_session_path,method: :delete,class: "text-dark",style: "text-decoration:none;", "data-turbolinks": "false" do %>
                <i class="fas fa-sign-out-alt mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to admin_path,class: "text-dark",style: "text-decoration:none;", "data-turbolinks": "false" do %>
                <i class="fas fa-home mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to admin_users_path,class: "text-dark",style: "text-decoration:none;" do %>
                <i class="fas fa-users mx-2" style="font-size:2rem;"></i>
              <% end %>
            <!--ログアウト中-->
            <% else %>
              <%= link_to user_session_path,class: "text-dark",style: "text-decoration:none;" do %>
                <i class="fas fa-sign-in-alt mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to root_path,class: "text-dark",style: "text-decoration:none;" do %>
                <i class="fas fa-home mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to user_session_path,class: "text-dark",style: "text-decoration:none;" do %>
                <i class="fas fa-user mx-2" style="font-size:2rem;"></i>
              <% end %>
              <%= link_to user_session_path,class: "text-dark",style: "text-decoration:none;" do %>
                <i class="fas fa-edit mx-2" style="font-size:2rem;"></i>
              <% end %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
