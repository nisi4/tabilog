<div class="container-fluid">
  <div class="row mt-5 mb-3 d-flex justify-content-center">
    <h2>ー　管理者ログイン　ー</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-sm-6 col-md-4">
      <%= form_with model: @admin,url: new_admin_session_path,method: :post do |f| %>
      <table class="table table-borderless">
        <tr>
          <td><%= f.email_field :email,placeholder: "メールアドレス",class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.password_field :password,placeholder: "パスワード",class: "form-control" %></td>
        </tr>
      </table>
      <div class="row mb-4 d-flex justify-content-center">
        <%= f.submit "ログイン",class: "btn btn-success text-white" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
