<div class="container-fluid">
    <div class="row mt-5 mb-4 d-flex justify-content-center">
        <span class="h2">ー　フォロワー　ー</span>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <table class="table table-bordered">
                <% @users.each do |user| %>
                <tr>
                    <td class="align-middle text-center">
                        <%= link_to mypage_path(user.id),class: "text-dark",style: "text-decoration:none;" do %>
                        <%= image_tag user.get_profile_image(50,50),class: "rounded-circle" %>　<%= user.user_name %>
                        <% end %>
                    </td>
                    <td class="align-middle text-center">
                        <% if current_user.following?(user) %>
                            <%= link_to "フォローを外す", unfollow_path(user.id),method: :delete,class: "btn btn-primary" %>
                        <% else %>
                            <%= link_to "フォローする", follow_path(user.id),method: :post,class: "btn btn-primary" %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>