<div class="row">
    <div class="col">
        <div class="card-deck">
            <% posts.each do |post| %>
            <div class="card">
                <%= image_tag post.image,class: "card-img-top",width: "100%",height: "180" %> 
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="row"></div>
                            <div class="row"><%= post.title %></div>
                        </div>
                        <div class="col-6 text-right">
                            <div class="row"></div>
                            <div class="row"></div>
                        </div>
                    </div>
                    <%= post.body %>
                </div>
                <div class="card-footer">
                    
                </div>
                <div
            </div>
            <% end %>
        </div>
    </div>
</div>