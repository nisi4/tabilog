<div class="container-fluid">
    <div class="row d-flex justify-content-center mt-5 mb-5">
        <% if @traveller.present? %>
            <h2>ー "<%= @traveller %>" で検索 ー</h2>
        <% else %>
            <h2>ー Tabi人一覧 ー</h2>
        <% end %>
    </div>
    <div class="row">
        <% @users.each do |user| %>
        <div class="col-6 col-lg-3 col-md-4 mb-4">
            <div class="row d-flex justify-content-center mb-3">
                <%= image_tag user.get_profile_image(150,150),class: "rounded-circle img-fluid" %>    
            </div>
            <div class="row d-flex justify-content-center">
                <%= link_to mypage_path(user.id) do %>
                    <%= user.user_name %>
                <% end %>
            </div>
        </div>
        <% end %>
    </div>
</div>