<div class="container-fluid">
  <div class="row my-4 d-flex justify-content-center">
    <h2>ー　<%= @user.user_name %>さんの新たなTabiログ　ー</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-sm-6">
      <%= form_with model: @post,url: posts_path,method: :post do |f| %>
      <table class="table table-borderless">
        <colspan>
          <col width="30%">
          <col width="70%">
        </colspan>
        <tr>
          <td class="align-middle text-right">Tabi画像</td>
          <td><%= f.file_field :imege,accept: "image/*",class: "form-control" %></td>
        </tr>
        <tr>
          <td class="align-middle text-right">市町村名</td>
          <td><%= f.collection_select(:town_id,@towns,:id,:town_name,{prompt: "--市町村を選択してください--"},class: "form-control") %></td>
        </tr>
        <tr>
          <td class="align-middle text-right">パスワード</td>
          <td><%= f.password_field :password,class: "form-control" %></td>
        </tr>
      </table>
      <div class="row mb-4 d-flex justify-content-center">
        <%= f.submit "記録",class: "btn btn-success text-white" %>
      </div>
      <% end %>
    </div>
  </div>
</div>